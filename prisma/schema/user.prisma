model User {
  id        Int      @id @default(autoincrement())
  email     String   @unique
  phone     String?  @unique
  name      String
  password  String
  avatar    String?
  
  // Address fields
  address   String?
  city      String?
  state     String?
  country   String?
  zipCode   String?
  
  // Account status
  role      Role     @default(USER)
  isActive  Boolean  @default(true)
  isVerified Boolean @default(false)
  
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  services  Service[]
  @@map("users")
  
}

enum Role {
  USER
  ADMIN
  VENDOR
}